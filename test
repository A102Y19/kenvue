# Path to server list file
$ServerList = "\\awsusdmjfsxn01.jnj.com\eth_qa2_omp\Task_Scheduler\Server_list.txt"

# Task folder path
$TaskPath = "\OMP Dispatcher\"   # updated folder

# Output log file (CSV report)
$ReportFile = "\\awsusdmjfsxn01.jnj.com\eth_qa2_omp\Task_Scheduler\RunTasksReport.csv"

# Empty array for results
$Results = @()

# Loop through each server
foreach ($server in Get-Content $ServerList) {
    Write-Host "Processing server: $server ..." -ForegroundColor Cyan
    try {
        $result = Invoke-Command -ComputerName $server -ScriptBlock {
            param($TaskPath)

            $tasks = Get-ScheduledTask -TaskPath $TaskPath -ErrorAction SilentlyContinue
            if ($tasks) {
                foreach ($task in $tasks) {
                    Start-ScheduledTask -TaskName $task.TaskName -TaskPath $TaskPath
                }
                return $tasks.TaskName -join ", "
            } else {
                return "No Tasks Found"
            }
        } -ArgumentList $TaskPath -ErrorAction Stop

        # Save result
        $Results += [PSCustomObject]@{
            Server   = $server
            TasksRun = $result
        }

        Write-Host "[$server] - Tasks run: $result" -ForegroundColor Green
    }
    catch {
        Write-Host "[$server] - Failed to run tasks. Error: $_" -ForegroundColor Red
        $Results += [PSCustomObject]@{
            Server   = $server
            TasksRun = "Error: $_"
        }
    }
}

# Export final report
$Results | Export-Csv -Path $ReportFile -NoTypeInformation -Force

Write-Host "All done! Report saved to $ReportFile" -ForegroundColor Cyan
