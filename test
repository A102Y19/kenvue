def backup_local_variables():
    try:


        # Timestamp for the new file name
        #timestamp = datetime.now().strftime('%Y%m%d_%H%M%S')
        dest_file = os.path.join(dest_dir, f"LocalVariables_{timestamp}.men")

        # Copy the file
        shutil.copy2(source_path, dest_file)

        logging.info(f"File copied successfully to: {dest_file}")
        print(f" Backup created: {dest_file}")

    except Exception as e:
        logging.error(f"Failed to backup file: {e}")
        print(f" Failed to backup file: {e}")
        sys.exit(1)


