$ServerList = "\\awsusdmkfsxn01.jnj.com\mdd_tst_omp\OMP_JNJ_MD_ATOM_LAB\OMPartners\development\dispatcher\bin\Automation\task_start\Server_list.txt"
$TaskFolder = "Agent_Monitoring"

foreach ($server in Get-Content $ServerList) {
    Write-Host "Processing server: $server ..." -ForegroundColor Cyan
    try {
        Invoke-Command -ComputerName $server -ScriptBlock {
            param($TaskFolder)

            # Get all tasks
            $tasks = Get-ScheduledTask | Where-Object { $_.TaskPath -like "*\$TaskFolder*" }

            if ($tasks) {
                foreach ($task in $tasks) {
                    $taskName = $task.TaskName
                    $taskPath = $task.TaskPath

                    Start-ScheduledTask -TaskName $taskName -TaskPath $taskPath -ErrorAction SilentlyContinue

                    # Verify status
                    $status = (Get-ScheduledTaskInfo -TaskName $taskName -TaskPath $taskPath).State

                    if ($status -eq "Running") {
                        Write-Host "[$env:COMPUTERNAME] - Task '$taskName' started successfully." -ForegroundColor Green
                    } elseif ($status -eq "Ready") {
                        Write-Host "[$env:COMPUTERNAME] - Task '$taskName' did NOT start." -ForegroundColor Red
                    } else {
                        Write-Host "[$env:COMPUTERNAME] - Task '$taskName' status: $status" -ForegroundColor Yellow
                    }
                }
            } else {
                Write-Host "[$env:COMPUTERNAME] - No tasks found in folder '$TaskFolder'." -ForegroundColor Yellow
            }
        } -ArgumentList $TaskFolder -ErrorAction Stop
    }
    catch {
        Write-Host "[$server] - Failed to run tasks. Error: $_" -ForegroundColor Red
    }
}

Write-Host "All done!" -ForegroundColor Cyan
