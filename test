import os
from pathlib import Path

def list_downloads_folder():
    download_path = Path.home() / "Downloads"
    
    if not download_path.exists():
        print(f"Downloads folder not found: {download_path}")
        return []
    
    files = os.listdir(download_path)
    
    if not files:
        print(f"Downloads folder is empty: {download_path}")
        return []
    
    print(f"Files in Downloads folder ({download_path}):")
    for f in files:
        print(f"  - {f}")
    
    return files

# Usage
list_downloads_folder()
