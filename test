import os
from pathlib import Path

def check_downloads_folder():
    print("DEBUG DOWNLOADS FOLDER")

    # 1 Python home directory
    home = Path.home()
    print("Python home directory:", home)

    # 2 Default Downloads folder
    downloads = home / "Downloads"
    print("Python default Downloads folder:", downloads)

    # 3 Check if Downloads folder exists
    if downloads.exists():
        print("Downloads folder exists")
        files = list(downloads.iterdir())
        if files:
            print("Files in Downloads folder:")
            for f in files:
                if f.suffix == ".crdownload":
                    print(f.name, "still downloading")
                else:
                    print(f.name)
        else:
            print("Downloads folder is empty")
    else:
        print("Downloads folder does NOT exist")

    print("END DEBUG")

# Execute the function
check_downloads_folder()
